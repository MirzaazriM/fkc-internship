		{
			"name": "List of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"\r",
							"const nonFictionBook = response.filter(book => book.available === true);\r",
							"\r",
							"const book = nonFictionBook[0];\r",
							"\r",
							"if(book){\r",
							"pm.globals.set(\"bookId\", book.id);\r",
							"}\r",
							"\r",
							"\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(book.type).to.eq(\"non-fiction\");\r",
							"   \r",
							"})\r",
							"console.log(book);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/books?type=non-fiction",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						},
						{
							"key": "limit",
							"value": "1",
							"disabled": true
						}
					]
				}
			},
			"response": []
